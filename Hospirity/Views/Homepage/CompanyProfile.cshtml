@model Hospirity.Models.CompanyProfile

@{
    ViewBag.Title = "CompanyProfile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var info = Model;
}

<!-- ########## START: MAIN PANEL ########## -->
<div class="sl-mainpanel">
    <nav class="breadcrumb sl-breadcrumb">
        <a class="breadcrumb-item" href="/Admin">Dashboard</a>
        <a class="breadcrumb-item" href="#.">Homepage</a>
        <span class="breadcrumb-item active">Company Profile</span>
    </nav>

    <div class="sl-pagebody">

        <div class="card pd-20 pd-sm-40">
            <h6 class="card-body-title">Company Profile</h6>

            @using (Html.BeginForm("CompanyProfile", "Homepage", FormMethod.Post, new { @class = "form -sample" }))
            {
                <div class="form-layout">
                    <div class="row mg-b-25">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label class="form-control-label">Our Vision: <span class="tx-danger">*</span></label>
                                @Html.TextAreaFor(model => model.Vision, new { @placeholder = "Our Vision", @required = "required", @class = "form-control", @value = info.Vision, @rows = "3" })
                            </div>
                        </div><!-- col-8 -->
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label class="form-control-label">Our Values: <span class="tx-danger">*</span></label>
                                @Html.TextAreaFor(model => model.CValues, new { @placeholder = "Our Values", @required = "required", @class = "form-control", @value = info.CValues, @rows = "3" })
                            </div>
                        </div><!-- col-8 -->
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label class="form-control-label">Our Mission: <span class="tx-danger">*</span></label>
                                @Html.TextAreaFor(model => model.Mission, new { @placeholder = "Our Mission", @required = "required", @class = "form-control", @value = info.Mission, @rows = "5" })
                            </div>
                        </div><!-- col-8 -->
                        @Html.HiddenFor(model => model.CId, new { @value = info.CId })
                    </div><!-- row -->

                    <div class="form-layout-footer">
                        <button class="btn btn-info mg-r-5">Submit</button>
                    </div><!-- form-layout-footer -->
                </div>
            }

        </div>
    </div>

</div>
<!-- ########## END: MAIN PANEL ########## -->